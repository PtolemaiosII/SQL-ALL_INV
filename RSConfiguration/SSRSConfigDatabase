CREATE DATABASE SSRSConfig;

USE SSRSConfig;
GO

CREATE TABLE SSRSUser(
	UserName	VARCHAR(50) NOT NULL PRIMARY KEY,
	Password	VARCHAR(100),
	IsActive	BIT
);


