CREATE GLOBAL TEMPORARY TABLE GTT$INVENTORY (
	ID INTEGER NOT NULL,
	QTY DOUBLE PRECISION,
	UNAVAILABLE DOUBLE PRECISION,
	DROPSHIP DOUBLE PRECISION,
	QTYCOMMITTED DOUBLE PRECISION,
	ALLOCATED DOUBLE PRECISION,
	ONORDER DOUBLE PRECISION,
	QTYNOTAVAILABLETOPICK DOUBLE PRECISION,
	PRIMARY KEY (ID)
);

CREATE GLOBAL TEMPORARY TABLE GTT$MLVLBOM (
	BOM_ID INTEGER NOT NULL,
	BOMITEM_TYPEID INTEGER,
	BOMITEMTYPE_NAME VARCHAR(30),
	QTY DOUBLE PRECISION,
	LOW_P_ID INTEGER NOT NULL,
	LOW_P_DESCRIPTION VARCHAR(252),
	LOW_P_NUM VARCHAR(70),
	LOW_P_DEFAULTBOMID INTEGER,
	UOM_CODE VARCHAR(10),
	LEVEL INTEGER,
	MOTHER_BOM INTEGER NOT NULL,
	PRIMARY KEY (BOM_ID,LOW_P_ID,MOTHER_BOM)
);
CREATE INDEX GTT$MLVLBOM_BOM_ID_IDX
	ON GTT$MLVLBOM (BOM_ID);
CREATE INDEX GTT$MLVLBOM_LOW_P_ID_IDX 
	ON GTT$MLVLBOM (LOW_P_ID);
CREATE INDEX GTT$MLVLBOM_LOW_P_NUM_IDX 
	ON GTT$MLVLBOM (LOW_P_NUM);
CREATE INDEX GTT$MLVLBOM_MOTHER_BOM_IDX
	ON GTT$MLVLBOM (MOTHER_BOM);


CREATE GLOBAL TEMPORARY TABLE GTT$SOITEM
(
	BOMITEMTYPE_NAME	VARCHAR(30) NOT NULL,
	SUM_NEW_QTY			DOUBLE PRECISION,
	LOW_P_ID			INTEGER NOT NULL,
	LOW_P_NUM			VARCHAR(70),
	LOW_P_DESCRIPTION	VARCHAR(252),
	LOW_P_DEFAULTBOMID	INTEGER,
	UOM_CODE			VARCHAR(10),
	PRIMARY KEY (BOMITEMTYPE_NAME, LOW_P_ID)
)
ON COMMIT PRESERVE ROWS;

CREATE INDEX GTT$SOITEM_LOW_P_ID_IDX
	ON GTT$SOITEM (LOW_P_ID);
CREATE INDEX GTT$SOITEM_LOW_P_DEFAULTBOM_IDX
	ON GTT$SOITEM (LOW_P_DEFAULTBOMID);

CREATE GLOBAL TEMPORARY TABLE GTT$TRADEQTY
(
	PART_ID				INTEGER NOT NULL,
	PART_NUM			VARCHAR(70),
	LOW_P_ID			INTEGER NOT NULL,
	LOW_P_NUM			VARCHAR(70),
	QTYONHAND			DOUBLE PRECISION,
	QTY					DOUBLE PRECISION,
	TRADEQTY			DOUBLE PRECISION,
	PRIMARY KEY (PART_ID, LOW_P_ID)
)
ON COMMIT PRESERVE ROWS;

CREATE INDEX GTT$TRADEQTY_PART_ID_IDX 
	ON GTT$TRADEQTY (PART_ID);
CREATE INDEX GTT$TRADEQTY_LOW_P_ID_IDX
	ON GTT$TRADEQTY (LOW_P_ID);
