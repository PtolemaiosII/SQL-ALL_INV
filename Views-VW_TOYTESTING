
CREATE VIEW VW_TOYTESTING (TESTBOMID,TESTBOMNUM,TESTBOMDESCRIPTION,TESTFLAG,TESTID,TESTNAME,TESTSORTORDER,TESTDATENAME,TESTDATE) AS    SELECT
	BOM.ID AS TESTBOMID,
	BOM.NUM AS TESTBOMNUM,
	BOM.DESCRIPTION AS TESTBOMDESCRIPTION,
	CUSTOMINTEGER.INFO AS TESTFLAG,
	CUSTOMFIELD.ID AS TESTID,
	CUSTOMFIELD.NAME AS TESTNAME,
	CUSTOMFIELD.SORTORDER AS TESTSORTORDER,
	CUSTOMFIELD2.NAME AS TESTDATENAME,
	CUSTOMTIMESTAMP.INFO AS TESTDATE
FROM
	BOM
	INNER JOIN 
	(
		CUSTOMINTEGER
		INNER JOIN CUSTOMFIELD ON CUSTOMINTEGER.CUSTOMFIELDID = CUSTOMFIELD.ID AND CUSTOMFIELD.TABLEID = 1705436292
		INNER JOIN CUSTOMFIELD CUSTOMFIELD2 ON CUSTOMFIELD.NAME || ' Date' LIKE CUSTOMFIELD2.NAME
		LEFT OUTER JOIN CUSTOMTIMESTAMP ON CUSTOMFIELD2.ID = CUSTOMTIMESTAMP.CUSTOMFIELDID
	) ON BOM.ID = CUSTOMINTEGER.RECORDID AND BOM.ID = CUSTOMTIMESTAMP.RECORDID
ORDER BY
	BOM.ID,
	BOM.NUM,
	CUSTOMFIELD.SORTORDER
	;

